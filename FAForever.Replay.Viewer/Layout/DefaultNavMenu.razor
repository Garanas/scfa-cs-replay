@inject ReplayService replayService;
@inherits ReactiveComponentBase

<MudPaper Width="250px" Class="py-3" Elevation="0">
    <MudNavMenu>
        <MudText Typo="Typo.h6" Class="px-4">Replay viewer</MudText>
        <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">For all your insights</MudText>

        @* <MudDivider Class="my-2"/> *@
        <MudNavLink Icon="@Icons.Material.Filled.Home" Href="/" Match="NavLinkMatch.All">Home</MudNavLink>

        @if (Observed(() => replayService.Replay) != null)
        {
            <MudNavGroup Icon="@Icons.Material.Filled.Replay" Title="Replay" Expanded="true">
                <MudNavLink Icon="@Icons.Material.Filled.Map" Href="/scenario" Match="NavLinkMatch.Prefix">Scenario</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.PeopleAlt" Href="/armies" Match="NavLinkMatch.Prefix">Armies</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.Extension" Href="/mods" Match="NavLinkMatch.Prefix">Mods</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.Input" Href="/orders" Match="NavLinkMatch.Prefix">Orders</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.Chat" Href="/chat" Match="NavLinkMatch.Prefix">Chat</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.AdminPanelSettings" Href="/moderation" Match="NavLinkMatch.Prefix">Moderation</MudNavLink>
            </MudNavGroup>
        }
    </MudNavMenu>
</MudPaper>
